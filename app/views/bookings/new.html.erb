<%= form_with url: new_passenger_path,class:"backdrop-blur-md border-white border-2 space-y-2 px-5 py-4 w-11/12 self-center", method: :get do |f|%>
<h1 class="text-2xl font-semibold pb-5">Enter the details of Passenger(s)</h1>
<%= hidden_field_tag "count", @count%>
<%= hidden_field_tag "flight", @Flight.id%>
    <%@count.to_i.times do |i| %>
     <div class="flex gap-5 align-middle">
        <div class="pl-5 w-fit"><%="Passenger "+(i+1).to_s%></div>
        <%= f.text_field :name, input_html:{multiple:true},:class =>"rounded", :placeholder => "Name" %>
        <%= f.text_field :email,input_html:{multiple:true},:class =>"rounded", :placeholder => "Email" %>
        <br><br>
    </div>
    <%end%>
    <%=f.submit "Submit",class:"bg-green-500 rounded hover:bg-green-700 p-2"%>
<%end%>

